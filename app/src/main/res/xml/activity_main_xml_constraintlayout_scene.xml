<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/floatingActionButton"
               motion:framePosition="0"
               android:scaleX="1"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/floatingActionButton"
               motion:framePosition="100"
               android:scaleX="0.0"
               android:scaleY="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/genres"
               motion:framePosition="0"
               android:scaleX="1.0"
               android:scaleY="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/genres"
               motion:framePosition="100"
               android:scaleX="0.0"
               android:scaleY="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/genres"
               motion:framePosition="0"
               android:alpha="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/genres"
               motion:framePosition="65"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/poster_image"
               motion:framePosition="0"
               android:alpha="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/poster_image"
               motion:framePosition="65"
               android:alpha="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/poster_image"
               motion:framePosition="0"
               android:scaleX="1.0"
               android:scaleY="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/poster_image"
               motion:framePosition="100"
               android:scaleX="0.0"
               android:scaleY="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/floatingActionButton"
               motion:framePosition="0"
               android:alpha="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/floatingActionButton"
               motion:framePosition="65"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/poster_image"
               motion:framePosition="85"
               android:scaleX="0.0"
               android:scaleY="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/floatingActionButton"
               motion:framePosition="85"
               android:scaleX="0.0"
               android:scaleY="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/genres"
               motion:framePosition="85"
               android:scaleX="0.0"
               android:scaleY="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/poster_image"
               motion:framePosition="25"
               android:rotation="45"
               android:translationX="-10dp"
               android:translationY="-100dp" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="271dp"
            android:id="@+id/barrier2"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_editor_absoluteX="411dp"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            motion:layout_constraintEnd_toEndOf="@+id/title"
            android:layout_width="0dp"
            motion:layout_constraintTop_toBottomOf="@+id/title"
            android:id="@+id/genres"
            motion:layout_constraintStart_toStartOf="@+id/title" />
        <Constraint
            android:id="@+id/navigationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="ColorFilter"
                motion:customColorValue="@color/white" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/poster_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="@+id/backdrop_image"
            motion:layout_constraintTop_toBottomOf="@+id/backdrop_image"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/floatingActionButton"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/backdrop_image"
            android:layout_marginEnd="16dp"
            motion:layout_constraintTop_toBottomOf="@+id/backdrop_image" />
        <Constraint
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/navigationIcon"
            motion:layout_constraintVertical_bias="1.0" >
            <CustomAttribute
                motion:attributeName="ColorFilter"
                motion:customColorValue="?attr/colorControlNormal" />
        </Constraint>
        <Constraint
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            motion:layout_constraintHorizontal_bias="0.0"
            android:layout_width="0dp"
            motion:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
            motion:layout_constraintStart_toEndOf="@id/navigationIcon"
            android:layout_marginStart="16dp"
            android:id="@+id/title"
            motion:layout_constraintBottom_toBottomOf="@+id/navigationIcon"
            motion:layout_constraintTop_toTopOf="@+id/navigationIcon" />
        <Constraint
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            motion:layout_constraintEnd_toEndOf="@+id/title"
            android:layout_width="193dp"
            motion:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginStart="16dp"
            android:id="@+id/genres"
            motion:layout_constraintStart_toStartOf="@+id/title" />
    </ConstraintSet>
</MotionScene>